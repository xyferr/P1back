{
    "version":2,
    "builds":[
        {
            "src":"portback/portback/wsgi.py",
            "use":"@vercel/python",
            "config":{ 
                "maxLambdaSize": "15mb",
                "runtime": "python3"
            }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "portback/staticfiles_build" 
            }
        }
    ],
    "routes": [
        
        {
            "src": "/static/(.*)",
            "dest": "/portback/staticfiles_build/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/portback/portback/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "portback.settings"
    }
    

}